{
  "compilerOptions": {
    "outDir": "./dist/",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "Api/*": ["src/api-routes/*"],
      "Lib/*": ["src/lib/*"],
      "Models/*": ["src/models/*"],
      "Types/*": ["src/types/*"],
      "Fixtures": ["test/fixtures"]
    },
    "module": "commonjs",
    "target": "es5"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/__mocks__/"]
}
