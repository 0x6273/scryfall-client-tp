{
  "name": "scryfall-client",
  "version": "0.9.0",
  "description": "A module for making requests to scryfall",
  "main": "index.js",
  "files": [
    "index.js",
    "lib/*",
    "models/*"
  ],
  "scripts": {
    "build": "browserify docs/src/index.js -o docs/script.js",
    "build:watch": "watchify docs/src/index.js -o docs/script.js",
    "predemo": "npm run build",
    "demo": "http-server docs -p 4567",
    "demo:dev": "npm run demo & npm run build:watch",
    "lint": "standard --verbose | snazzy",
    "pretest": "npm run lint",
    "test": "npm run test:unit",
    "test:unit": "mocha test/unit/**/*.js",
    "test:integration": "mocha test/integration/**/*.js",
    "test:publishing": "mocha test/publishing/**/*.js",
    "test:all": "npm run lint && npm run test:unit && npm run test:integration && npm run test:publishing"
  },
  "keywords": [
    "mtg",
    "magic the gathering",
    "scryfall"
  ],
  "author": "blade <blade@crookedneighbor.com>",
  "license": "MIT",
  "devDependencies": {
    "browserify": "^16.2.3",
    "chai": "^4.2.0",
    "check-ecmascript-version-compatibility": "^0.1.1",
    "http-server": "^0.11.1",
    "mkdirp": "^0.5.1",
    "mocha": "^6.1.4",
    "sinon": "^7.3.2",
    "sinon-chai": "^3.3.0",
    "snazzy": "^8.0.0",
    "standard": "^12.0.1",
    "watchify": "^3.11.1"
  },
  "dependencies": {
    "promise-polyfill": "^8.1.0"
  },
  "standard": {
    "globals": [
      "afterEach",
      "before",
      "beforeEach",
      "describe",
      "context",
      "expect",
      "it"
    ],
    "ignore": [
      "dist/*",
      "docs/script.js"
    ]
  }
}
